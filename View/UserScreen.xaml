<Window x:Class="DemoExam.UserScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoExam"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="UserScreen" Height="720" Width="1240">

    <Window.Resources>

        <Style x:Key="style1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="btnStyle" TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
            <Setter Property="Background" Value="#FFF2CC01" />
            <Setter Property="FontSize" Value="21" />
        </Style>

    </Window.Resources>


    <Grid Background="#FF27295A">

        <StackPanel>

            <Border 
                CornerRadius="30"
                Margin="40 40 40 0"
                Height="150"
                Padding="30"
                Background="White">

                <StackPanel
                    Orientation="Horizontal">

                    <TextBlock
                        x:Name="TextBlockUserName"
                        Style="{StaticResource style1}"
                        FontSize="25"
                        Text="Иванов Иван Иванович"/>

                    <Button 
                        Style="{StaticResource btnStyle}"
                        Margin="300 0 0 0"
                        Width="200"
                        Content="Подать заявку"
                        Click="MakeRequestButtonClick"/>

                    <Button
                        Style="{StaticResource btnStyle}"
                        Margin="20 0 0 0"
                        Width="200"
                        Content="Оставить отзыв"
                        Click="GenerateQrCode"/>



                </StackPanel>

            </Border>

            <Border
                Background="White"
                Height="450"
                Margin="40 40 40 0">

                <StackPanel>
                    <TextBlock 
                        Text="Ваши заявки"
                        HorizontalAlignment="Center"
                        FontSize="30"/>

                    <DataGrid
                        x:Name="requestDataGrid">
                    </DataGrid>

                </StackPanel>



            </Border>

        </StackPanel>



        <Grid
            x:Name="gridRequest"
            Background="#3F000000"
            Visibility="Collapsed">

            <Grid
                 Width="500"
                 Height="500">

                <Border
                    Padding="40"
                    Background="White"
                    CornerRadius="30">

                    <StackPanel>

                        <Button 
                            Width="25"
                            Height="25"
                            Content="×"
                            HorizontalAlignment="Right"
                            Click="CloseRequestGridClick"/>

                        <TextBlock 
                            Text="Заполните заявку"
                            Style="{StaticResource title1}"
                            HorizontalAlignment="Center"/>

                        <TextBlock
                            Text="Укажите модель оборудования:"
                            Margin="0 20 0 0"
                            Style="{StaticResource title3}" />

                        <TextBox 
                            x:Name="modelField"
                            Style="{StaticResource textFieldStyle}"/>

                        <TextBlock
                            Text="Укажите тип неисправности:"
                            Margin="0 20 0 0"
                            Style="{StaticResource title3}" />

                        <TextBox 
                            x:Name="typeField"
                            Style="{StaticResource textFieldStyle}"/>

                        <TextBlock
                            Text="Опишите подробнее вашу проблему:"
                            Margin="0 20 0 0"
                            Style="{StaticResource title3}" />

                        <TextBox 
                            x:Name="descriptionField"
                            Style="{StaticResource textFieldStyle}"/>

                        <Button 
                            Content="Отправить заявку"
                            Style="{StaticResource btnStyle}"
                            Margin="0 20 0 0"
                            Click="SendRequestClick" />



                    </StackPanel>

                </Border>

            </Grid>

         
        </Grid>


        <Grid
            x:Name="gridQrCode"
            Background="#3F000000"
            Visibility="Visible">

            <Grid
           Width="500"
           Height="500">

                <Border
              Padding="40"
              Background="White"
              CornerRadius="30">

                    <StackPanel>

                        <TextBlock
                            Text="Пожалуйста, оставьте ваш отзыв"
                            HorizontalAlignment="Center"
                            Style="{StaticResource title1}"/>

                        <Image
                            Margin="0 20 0 0"
                            x:Name="ImageQrCode"
                            Width="300"
                            Height="300"/>

                    </StackPanel>

                </Border>

            </Grid>
        </Grid>


    </Grid>
</Window>
